<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

      <%- include('includes/messages') %>

      <div class="row">
        <div class="col-lg card text-bg-light m-2">
          <h4 class="my-3">Faça o seu cadastro</h4>
          <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>

          <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>" />

            <div class="form-group m-1">
              <label>Seu e-mail</label>
              <input
                type="email"
                class="form-control"
                name="email"
                placeholder="Cadastre o seu email"
              />
            </div>
            <div class="form-group m-1">
              <label>Sua senha</label>
              <input
                type="password"
                class="form-control"
                name="password"
                placeholder="Cadastre a sua senha"
              />
            </div>
            <button type="submit" class="btn btn-primary my-3">Criar minha conta</button>
          </form>
        </div>

        <div class="col-lg card text-bg-dark m-2">
          <h4 class="my-3">Faça o seu login</h4>
          <p>Se você já tem uma conta, faça o login abaixo:</p>

          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>" />

            <div class="form-group m-1">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email" placeholder="Digite o email" />
            </div>
            <div class="form-group m-2">
              <label>Sua senha</label>
              <input
                type="password"
                class="form-control"
                name="password"
                placeholder="Digite a senha"
              />
            </div>
            <button type="submit" class="btn btn-primary my-3">Entrar</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
